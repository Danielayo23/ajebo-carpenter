generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model cart {
  id        Int        @id @default(autoincrement())
  userId    Int        @unique(map: "Cart_userId_key")
  createdAt DateTime   @default(now())
  updatedAt DateTime
  user      user       @relation(fields: [userId], references: [id], map: "Cart_userId_fkey")
  cartitem  cartitem[]
}

model cartitem {
  id        Int      @id @default(autoincrement())
  cartId    Int
  productId Int
  quantity  Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime
  cart      cart     @relation(fields: [cartId], references: [id], onDelete: Cascade, map: "CartItem_cartId_fkey")
  product   product  @relation(fields: [productId], references: [id], map: "CartItem_productId_fkey")

  @@unique([cartId, productId], map: "CartItem_cartId_productId_key")
  @@index([productId], map: "CartItem_productId_fkey")
}

model category {
  id        Int       @id @default(autoincrement())
  name      String    @unique(map: "Category_name_key")
  slug      String    @unique(map: "Category_slug_key")
  sortOrder Int       @default(0)
  product   product[]
}

model hero {
  id                 Int     @id @default(autoincrement())
  backgroundImageUrl String
  active             Boolean @default(true)
}

model order {
  id             Int                  @id @default(autoincrement())
  reference      String               @unique(map: "Order_reference_key")
  userId         Int
  totalAmount    Int
  status         order_status         @default(PENDING)
  createdAt      DateTime             @default(now())
  deliveredAt    DateTime?
  deliveryStatus order_deliveryStatus @default(PROCESSING)
  user           user                 @relation(fields: [userId], references: [id], map: "Order_userId_fkey")
  orderitem      orderitem[]
  payment        payment?

  @@index([userId], map: "Order_userId_fkey")
}

model orderitem {
  id        Int     @id @default(autoincrement())
  orderId   Int
  productId Int
  quantity  Int
  price     Int
  order     order   @relation(fields: [orderId], references: [id], map: "OrderItem_orderId_fkey")
  product   product @relation(fields: [productId], references: [id], map: "OrderItem_productId_fkey")

  @@index([orderId], map: "OrderItem_orderId_fkey")
  @@index([productId], map: "OrderItem_productId_fkey")
}

model payment {
  id        Int       @id @default(autoincrement())
  orderId   Int       @unique(map: "Payment_orderId_key")
  provider  String
  reference String
  status    String
  paidAt    DateTime?
  order     order     @relation(fields: [orderId], references: [id], map: "Payment_orderId_fkey")
}

model product {
  id          Int         @id @default(autoincrement())
  name        String
  slug        String      @unique(map: "Product_slug_key")
  description String      @db.Text
  price       Int
  imageUrl    String
  stock       Int
  active      Boolean     @default(true)
  categoryId  Int
  createdAt   DateTime    @default(now())
  images      Json?
  cartitem    cartitem[]
  orderitem   orderitem[]
  category    category    @relation(fields: [categoryId], references: [id], map: "Product_categoryId_fkey")

  @@index([categoryId], map: "Product_categoryId_fkey")
}

model user {
  id          Int       @id @default(autoincrement())
  clerkUserId String    @unique(map: "User_clerkUserId_key")
  email       String
  role        user_role @default(CUSTOMER)
  createdAt   DateTime  @default(now())
  cart        cart?
  order       order[]
}

enum user_role {
  ADMIN
  CUSTOMER
}

enum order_status {
  PENDING
  PAID
  PROCESSING
  DISPATCHED
  DELIVERED
  FAILED
  CANCELLED
}

enum order_deliveryStatus {
  PROCESSING
  DISPATCHED
  DELIVERED
}
